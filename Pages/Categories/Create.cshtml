@page
@model SupermarketWEB.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Category.Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Category.Name" class="form-control form-control-lg" placeholder="Enter category name" />
                            <span asp-validation-for="Category.Name" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Category.Description" class="form-label fw-bold">Description</label>
                            <input asp-for="Category.Description" class="form-control form-control-lg" placeholder="Enter description (optional)" />
                            <span asp-validation-for="Category.Description" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}