@page
@model SupermarketWEB.Pages.PayModes.CreateModel
@{
    ViewData["Title"] = "Crear Método de Pago";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #0d6efd;">
                    <!-- Azul Bootstrap -->
                    <h3 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="PayMode.Nombre" class="form-label fw-bold" style="color: #0d6efd;">Nombre del Método</label>
                            <input asp-for="PayMode.Nombre" class="form-control form-control-lg" placeholder="Ingrese el nombre del método" />
                            <span asp-validation-for="PayMode.Nombre" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PayMode.Descripcion" class="form-label fw-bold" style="color: #0d6efd;">Descripción</label>
                            <input asp-for="PayMode.Descripcion" class="form-control form-control-lg" placeholder="Ingrese descripción (opcional)" />
                            <span asp-validation-for="PayMode.Descripcion" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn text-white" style="background-color: #0d6efd;">
                                <i class="fas fa-save me-1"></i> Crear Método
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}