@page
@model SupermarketWEB.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: #0d6efd;">
                    <h3 class="mb-0">
                        <i class="fas fa-box-open me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Product.Name" class="form-label fw-bold">Nombre del Producto</label>
                            <input asp-for="Product.Name" class="form-control form-control-lg" placeholder="Ingrese el nombre del producto" />
                            <span asp-validation-for="Product.Name" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Product.CategoryId" class="form-label fw-bold">ID de la Categoría</label>
                            <input asp-for="Product.CategoryId" class="form-control form-control-lg" placeholder="Ingrese el ID de la categoría" />
                            <span asp-validation-for="Product.CategoryId" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Product.Stock" class="form-label fw-bold">Stock</label>
                            <input asp-for="Product.Stock" class="form-control form-control-lg" placeholder="Ingrese la cantidad en stock" />
                            <span asp-validation-for="Product.Stock" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Product.Price" class="form-label fw-bold">Precio</label>
                            <input asp-for="Product.Price" class="form-control form-control-lg" placeholder="Ingrese el precio del producto" />
                            <span asp-validation-for="Product.Price" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                            </a>
                            <button type="submit" class="btn text-white" style="background-color: #0d6efd;">
                                <i class="fas fa-save me-1"></i> Crear Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}